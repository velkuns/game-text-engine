{
  "name": "velkuns/game-text-engine",
  "description": "This is a PHP Game Text Engine to create games based on texts, with choices, items, and more.",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "Velkuns\\GameTextEngine\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Velkuns\\GameTextEngine\\Tests\\": "./tests"
    }
  },

  "config": {
    "sort-packages": true
  },

  "require": {
    "php": "8.3.*||8.4.*||8.5.*"
  },

  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.89.2",
    "phpstan/phpstan": "^2.1.32",
    "phpstan/phpstan-strict-rules": "^2.0.7",
    "phpstan/phpstan-deprecation-rules": "^2.0.3",
    "phpstan/phpstan-phpunit": "^2.0.8",
    "phpunit/phpcov": "^11.0.2",
    "phpunit/phpunit": "^12.4.2",
    "shipmonk/composer-dependency-analyser": "^1.8.3"
  }
}
